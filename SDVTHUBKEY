
-- üå± Plant Vs Brainrot | SDVT Hub (Rayfield + Key System + Flash)
-- Key: SDVTSCRIPT

-- ‚ö° Load Rayfield
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Key Window
local KeyWindow = Rayfield:CreateWindow({
    Name = "üîë SDVT Hub Key System",
    LoadingTitle = "Enter Key",
    LoadingSubtitle = "Key Required",
    ConfigurationSaving = { Enabled = false } -- ‚ùå Kh√¥ng l∆∞u key
})

local KeyTab = KeyWindow:CreateTab("Key", "lock")

local correctKey = "SDVTSCRIPT"
local enteredKey = ""

KeyTab:CreateInput({
    Name = "Enter Key",
    PlaceholderText = "Type your key here...",
    RemoveTextAfterFocusLost = false,
    Callback = function(text)
        enteredKey = text
    end
})

KeyTab:CreateButton({
    Name = "Submit Key",
    Callback = function()
        if enteredKey == correctKey then
            warn("‚úÖ Correct Key!")
            
            -- ‚ö° Hi·ªáu ·ª©ng ch·ªõp t·∫Øt m√†n h√¨nh 3s
            local PlayerGui = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
            local flashGui = Instance.new("ScreenGui")
            flashGui.IgnoreGuiInset = true
            flashGui.ResetOnSpawn = false
            flashGui.Parent = PlayerGui

            local flashFrame = Instance.new("Frame")
            flashFrame.Size = UDim2.new(1, 0, 1, 0)
            flashFrame.BackgroundColor3 = Color3.new(1, 1, 1)
            flashFrame.BackgroundTransparency = 1
            flashFrame.Parent = flashGui

            task.spawn(function()
                for i = 1, 6 do -- ch·ªõp 6 l·∫ßn ~ 3s
                    flashFrame.BackgroundTransparency = 0
                    task.wait(0.25)
                    flashFrame.BackgroundTransparency = 1
                    task.wait(0.25)
                end
                flashGui:Destroy()

                -- Load Main Script sau khi nh·∫≠p ƒë√∫ng key
                loadstring(game:HttpGet("https://raw.githubusercontent.com/Shadow-Vertex/SDVTHUB/refs/heads/main/SDVTHUB"))()
            end)
        else
            warn("‚ùå Wrong Key!")
        end
    end
})

