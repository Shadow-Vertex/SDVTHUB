-- üå± Plant Vs Brainrot | SDVT Hub (Rayfield + Flexible Key System)
-- Key h·ª£p l·ªá: "SDVTSCRIPT" HO·∫∂C b·∫•t k·ª≥ chu·ªói 12 ch·ªØ s·ªë n√†o

-- ‚ö° Load Rayfield
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Key Window
local KeyWindow = Rayfield:CreateWindow({
    Name = "üîë SDVT Hub Key System",
    LoadingTitle = "Enter Key",
    LoadingSubtitle = "Key Required",
    ConfigurationSaving = { Enabled = false }
})

local KeyTab = KeyWindow:CreateTab("Key", "lock")

local enteredKey = ""

KeyTab:CreateInput({
    Name = "Enter Key",
    PlaceholderText = "Type your key here...",
    RemoveTextAfterFocusLost = false,
    Callback = function(text)
        enteredKey = text
    end
})

KeyTab:CreateButton({
    Name = "Submit Key",
    Callback = function()
        -- ‚úÖ Ki·ªÉm tra: "SDVTSCRIPT" ho·∫∑c 12 ch·ªØ s·ªë
        local isValid = (enteredKey == "SDVTSCRIPT") or 
                        (tonumber(enteredKey) ~= nil and #enteredKey == 12 and enteredKey:match("^%d+$"))

        if isValid then
            warn("‚úÖ Correct Key!")
            
            -- ‚ö° Flash effect
            local PlayerGui = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
            local flashGui = Instance.new("ScreenGui")
            flashGui.IgnoreGuiInset = true
            flashGui.ResetOnSpawn = false
            flashGui.Parent = PlayerGui

            local flashFrame = Instance.new("Frame")
            flashFrame.Size = UDim2.new(1, 0, 1, 0)
            flashFrame.BackgroundColor3 = Color3.new(1, 1, 1)
            flashFrame.BackgroundTransparency = 1
            flashFrame.Parent = flashGui

            task.spawn(function()
                for i = 1, 6 do
                    flashFrame.BackgroundTransparency = 0
                    task.wait(0.25)
                    flashFrame.BackgroundTransparency = 1
                    task.wait(0.25)
                end
                flashGui:Destroy()

                -- ‚úÖ Load main script
                local success, err = pcall(function()
                    loadstring(game:HttpGet("https://raw.githubusercontent.com/Shadow-Vertex/SDVTHUB/refs/heads/main/SDVTHUB"))()
                end)
                if not success then
                    Rayfield:Notify({
                        Title = "Error",
                        Content = "Failed to load main script.",
                        Duration = 5,
                        Image = 4483362458
                    })
                end
            end)
        else
            warn("‚ùå Invalid Key! Must be 'SDVTSCRIPT' or 12 digits.")
            Rayfield:Notify({
                Title = "Invalid Key",
                Content = "Key ph·∫£i l√† 'SDVTSCRIPT' ho·∫∑c g·ªìm ƒë√∫ng 12 ch·ªØ s·ªë.",
                Duration = 4,
                Image = 4483362458
            })
        end
    end
})

-- üîë N√∫t "Get Key" ‚Üí m·ªü trang web
KeyTab:CreateButton({
    Name = "üåê Get Key from Web",
    Callback = function()
        local url = "https://bao760.github.io/hairobloxweb11/SDVTHUBKEY.html"
        setclipboard(url)
        Rayfield:Notify({
            Title = "üîó Get Key",
            Content = "Link ƒë√£ ƒë∆∞·ª£c sao ch√©p! Ho√†n th√†nh nhi·ªám v·ª• tr√™n web ƒë·ªÉ nh·∫≠n key 12 s·ªë.",
            Duration = 6,
            Image = 4483362458
        })
    end
})
